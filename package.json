{
  "devDependencies": {
    "husky": "3.0.2",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1"
  },
  "scripts": {
    "prettify": "pretty-quick --staged 'src/**/*.java' --pattern '**/*.json' --pattern '**/*.md' --pattern '**/*.yml'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn prettify"
    }
  }
}
